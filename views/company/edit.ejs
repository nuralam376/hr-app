<% include ../layouts/admin/header %>
    <h1 class = "text-center">Edit Company Details</h1>    
   
    <form action="/company/update" method = "POST">
        <input type="hidden" name = "_csrf" value = "<%= csrfToken %>">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="name">Company Name</label>
                    <input type="text" name = "name" id = "name" class = "form-control" value = "<%= company.name %>">
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="text" name = "email" id = "email" class = "form-control" value = "<%= company.email %>"> 
                </div>
                <div class="form-group">
                    <label for="address">Address</label>
                    <textarea name="address" id="address" cols="30" rows="5" class = "form-control"><%= company.address %></textarea>
                </div>
                <div class="form-group">
                    <label for="contact">Contact No.</label>
                    <input type="text" name = "contact" id = "contact" class = "form-control" value = "<%= company.contact %>"> 
                </div>
            </div>
        </div>
      
        <div class="form-group">
            <input type="submit" class = "btn btn-success" value = "Update">
        </div>
    </form>
<% include ../layouts/admin/footer %>