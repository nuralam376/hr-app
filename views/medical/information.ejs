<% include ../layouts/admin/header %>
<% include ./search %>

<div class="row">
    <div class="col-md-12">
            <% if(pax && medical) { %>
                <h1 class = "text-center">PAX Information</h1>
                <table class = "table table-bordered">
                    <tr>
                        <th>PAX Code</th>
                        <th>PAX Name</th>
                        <th>PAX No</th>
                        <th>Reference</th>
                        <th>Group</th>
                        <th></th>
                    </tr>
                    <tr>
                        <td><%= pax.code %></td>
                        <td><%= pax.name %></td>
                        <td><%= pax.passport %></td>
                        <td><a href="/supplier/<%= pax.supplier.seq_id %>"><%= pax.supplier.name %></a></td>
                        <td><a href="/group/<%= medical.group._id %>"><%= medical.group.group_seq %> / <%= medical.group.group_sl  %></a></td>
                    </tr>          
                </table>
             <% } %>   
            <% if(medical && medical.medical_slip) { %>
                <h1>Medical Center Information</h1>
                <a href="/medical/center/edit/<%= medical._id %>" class = "btn btn-info">Update</a>
                <table class = "table table-bordered">
                    <tr>
                        <th>Medical Center name</th>
                        <th>Medical Issue Date</th>
                        <th>Medical Slip</th>
                    </tr>
                    <tr>
                        <td><%= medical.center_name %></td>
                        <td><%= moment(medical.issue).format("llll") %></td>
                        <td><a data-fancybox="gallery" href="/uploads/medical/<%= medical.medical_slip %>"><img src="/uploads/medical/<%= medical.medical_slip %>" alt="" style = "max-width : 500px; height : 100px" ></a></td>
                    </tr>
                </table>
            <% }else {  %>    
                <div class="row">
                    <div class="col-md-6">
                            <form action="/medical/register/center/<%= pax.code %>" method = "POST" enctype = "multipart/form-data">
                                <input type="hidden" name = "_csrf" value = "<%= csrfToken %>">
                                <input type="hidden" name = "code" value = "<%= pax.code %>">
                                <input type="hidden" name = "pax" value = "<%= pax._id %>">
                                <div class="form-group">
                                    <label for="center">Medical Center Name</label>
                                    <input type="text" name = "center" id = "center" class = "form-control" value = "<%= typeof form != 'undefined' ? form.center : '' %>"> 
                                </div>
                                <div class="form-group">
                                    <label for="slip">Medical Slip</label>
                                    <input type="file" name = "slip" id = "slip" class = "form-control"> 
                                    <img src="" alt="" style = "max-width : 500px; height : auto" id = "photo">
                                </div>
                                <div class="form-group">
                                    <label for="issue">Medical Issue Date</label>
                                    <input type="date" name = "issue" id = "issue" class = "form-control" value = "<%= typeof form != 'undefined' ? moment(new Date(form.issue)).format('YYYY-MM-DD') : '' %>">
                                </div>
                                <div class="form-group">
                                    <input type="submit" value = "Save" class = "btn btn-success">
                                </div>
                            </form>
                    </div>
                </div>
                
             <% } if(typeof editMedical != 'undefined' && editMedical) {  %>    
                <div class="row">
                        <div class="col-md-6">
                                <form action="/medical/center/update/<%= medical._id %>" method = "POST" enctype = "multipart/form-data">
                                    <input type="hidden" name = "_csrf" value = "<%= csrfToken %>">
                                    <input type="hidden" name = "code" value = "<%= pax.code %>">
                                    <input type="hidden" name = "pax" value = "<%= pax._id %>">
                                    <div class="form-group">
                                        <label for="center">Medical Center Name</label>
                                        <input type="text" name = "center" id = "center" class = "form-control" value = "<%= medical.center_name %>"> 
                                    </div>
                                    <div class="form-group">
                                        <label for="slip">Medical Slip</label>
                                        <input type="file" name = "slip" id = "slip" class = "form-control"> 
                                        <img src="" alt="" style = "max-width : 500px; height : auto" id = "photo">
                                        <img src="/uploads/medical/<%= medical.medical_slip %>" alt="" style = "max-width : 500px; height : auto">
                                    </div>
                                    <div class="form-group">
                                        <label for="issue">Medical Issue Date</label>
                                        <input type="date" name = "issue" id = "issue" class = "form-control" value = "<%= moment(new Date(medical.issue)).format('YYYY-MM-DD') %>">
                                    </div>
                                    <div class="form-group">
                                        <input type="submit" value = "Update" class = "btn btn-success">
                                    </div>
                                </form>
                        </div>
                    </div>
                
             <% } %>
    </div>
</div>
 <% include ../layouts/admin/footer %>