<% include ../layouts/admin/header %>

    <h1 class = "text-center">User Home</h1>
    <div class="card">
        <div class="card-body">
            <h2>All Users</h2>     
            <div class="pull-right">
                <a href="/user/register" class = "btn btn-primary">Create New User</a>
            </div>   
            <br><br>

            <table id="myTable" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Passport ID</th>
                        <th>Assigned Supplier</th>
                        <th>Photo</th>
                    </tr>
                </thead>
                <tbody>
                    <% if(users) { %>
                        <% users.forEach(function(user) { %>
                            <tr>
                                <td><a href = "/user/<%= user.seq_id %>"><%= user.seq_id %></a></td>
                                <td><%= user.name %></td>
                                <td><%= user.email %></td>
                                <td><%= user.passport %></td>
                                <% if(user.supplier) { %>
                                    <td><a href="/supplier/<%= user.supplier.seq_id %>"><%= user.supplier.name %></a></td>
                                <% } else { %>
                                    <td>No Supplier</td>
                                <% } %>
                                <td><img src = "uploads/user/<%= user.profile_photo %>" height = "50px" width = "50px"></td>
                            </tr>
                        <% }) %>
                    <% } %>
                 </tbody>   
            </table>
        </div>
    </div>
<% include ../layouts/admin/footer %>