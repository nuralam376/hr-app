<% include ../layouts/header %>
    <h1><%= user.name %>
        <a href = "/user/edit/<%= user._id %>" class = "btn btn-info">Edit</a>
        <a href = "/user/delete/<%= user._id %>" class = "btn btn-danger">Delete</a>
    </h1>    
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" name = "name" id = "name" class = "form-control" value = "<%= user.name %>" disabled>
    </div>
    <div class="form-group">
        <label for="email">Email</label>
        <input type="text" name = "email" id = "email" class = "form-control" value = "<%= user.email %>" disabled> 
    </div>
    <div class="form-group">
        <label for="birth_date">Birth Date</label>
        <input type="text" name = "birth_date" id = "name" class = "form-control" placeholder = "dd/mm/yy" value = "<%= user.birth_date %>" disabled>
    </div>
    <div class="form-group">
        <label for="blood">Blood Group</label>
        <input type="text" name = "blood" id = "name" class = "form-control" value = "<%= user.blood_group %>" disabled>
    </div>
    <div class="form-group">
        <label for="nid">National ID</label>
        <input type="text" name = "nid" id = "nid" class = "form-control" value = "<%= user.nid %>" disabled>
    </div>
    <div class="form-group">
        <label for="passport">Passport ID</label>
        <input type="text" name = "passport" id = "passport" class = "form-control" value = "<%= user.passport %>" disabled>
    </div>
    <div class="form-group">
        <label for="present_address">Present Address</label>
        <textarea name="present_address" id="present_address" cols="30" rows="5" class = "form-control" disabled><%= user.present_address %></textarea>
    </div>
    <div class="form-group">
        <label for="permanent_address">Permanent Address</label>
        <textarea name="permanent_address" id="permanent_address" cols="30" rows="5" class = "form-control"disabled><%= user.permanent_address %></textarea>
    </div>
    <div class="form-group">
        <label for="profile_photo">Profile Photo</label>
        <img src = "/uploads/<%= user.profile_photo %>" height = "100px" width = "100px">
    </div>
    <div class="form-group">
        <label for="passport_photo">Passport Photo</label>
        <img src = "/uploads/<%= user.passport_photo %>" height = "100px" width = "100px">
    </div>
<% include ../layouts/footer %>