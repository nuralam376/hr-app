<% include layouts/frontpage/header %>
    <p class="login-box-msg">Change Your Password</p>

    <% if(typeof errorMsg != 'undefined') { %> 
        <div class = ' alert alert-error'><%= errorMsg %></div>
    <% } %>    
    <form action="/change-password/<%= token %>" method = "POST">
        <input type="hidden" name = "_csrf" value = "<%= csrfToken %>">
       <div class="form-group">
           <label for="password">Password</label>
           <input type="password" name = "password" id = "password" class = "form-control" value = "<%= typeof forms == 'undefined' ? '' : forms.email %>">
       </div>
       <div class="form-group">
            <label for="confirm_password">Confirm Password</label>
            <input type="password" name = "confirm_password" id = "confirm_password" class = "form-control" value = "<%= typeof forms == 'undefined' ? '' : forms.email %>">
        </div>
       <div class="form-group">
            <input type="submit" name = "submit" value = "Submit" class = "btn btn-success">
        </div>
    </form>
<% include layouts/frontpage/footer %>