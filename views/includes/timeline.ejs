<% include ../layouts/admin/header %>
<div class="container mt-xs-5 mb-xs-5">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <h4><%= paxStage.pax.code %> <%= stageName %> TimeLine</h4>
            <%if (paxStage.events.length > 0){ let i = 0;%>
            <input type="hidden" id="userCount" data-length="<%= paxStage.events.length %>">

            <ul class="timeline">
                <% paxStage.events.reverse().forEach(event => { %>
                <li>
                    <a href="javascript:void(0)"><%= event.display_name %></a>
                    <a href="javascript:void(0)" class="pull-right" id="user-<%= i++ %>"
                        data-user="<%= event.time %>"></a>
                    <p><%= event.description %></p>
                </li>
                <% }); %>
            </ul>
            <% } else { %>
            <h1>No Events</h1>
            <% } %>
        </div>
    </div>
</div>

<% include ../layouts/admin/footer %>