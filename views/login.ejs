<% include layouts/frontpage/header %>
    <p class="login-box-msg">Sign in to start your session</p>

    <form action="/login" method = "POST">
        <input type="hidden" name = "_csrf" value = "<%= csrfToken %>">
       <div class="form-group">
           <label for="username">Email</label>
           <input type="text" name = "username" id = "email" class = "form-control">
       </div>
       <div class="form-group">
           <label for="password">Password</label>
           <input type="password" name = "password" id = "password" class = "form-control">
       </div>
       <div class="form-group">
           <input type="submit" name = "submit" value = "Submit" class = "btn btn-success">
           <a href="/forget-password" class = "pull-right btn btn-info">Forget Password?</a>
       </div>
    </form>
    <div>
        <p>Not Registered yet? <a href="/register">Sign up</a> to continue</p>
    </div>
<% include layouts/frontpage/footer %>