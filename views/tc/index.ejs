<% include ../layouts/admin/header %>

    <h1 class = "text-center">Training Certificates</h1>
    <div class="card">
        <div class="card-body">
            <h2>All Information</h2>     

            <div class="table-responsive">
                    <table id="myTable" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>PAX Code</th>
                                <th>PAX Name</th>
                                <th>TC Received</th>
                                <th>Finger</th>
                                <th>TC Document</th>
                            </tr>
                        </thead>
                        <tbody>
                          
                           <% if(tcs.length > 0) { %>
                                <% tcs.forEach(tc => { %>
                                <tr>   
                                    <td><a href="/pax/<%= tc.pax.seq_id %>"><%= tc.pax.code %></a></td>
                                    <td><%= tc.pax.name %></td>
                                    <td><%= tc.status %></td>
                                    <td><a data-fancybox="gallery" href="uploads/tc/<%= tc.pc_image %>"><img src = "uploads/tc/<%= tc.pc_image %>" height = "50px" width = "50px"></a></td>
                                    <%if(tc.visa_no) { %>
                                        <td><%= tc.visa_no %></td>
                                        <td><%= moment(tc.tc_date).format("ll") %></td>
                                    <% } else { %>
                                        <td>-----</td>
                                        <td>-----</td>
                                    <% } %>
                                    <td><a href = "#" class = "btn btn-danger delete-tc" data-id = "<%= tc._id %>" data-csrf = "<%= csrfToken %>">Delete</a></td>
                                </tr>
                                <% }) %>
                           <% } %>
                               
                        </tbody>   
                    </table>
            </div>
        </div>
    </div>
<% include ../layouts/admin/footer %>