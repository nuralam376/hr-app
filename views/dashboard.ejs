<% include layouts/admin/header %>
    <h1 class = "text-center">Dashboard</h1>    
    <br><br>
    <h3>Your Company Details
    <% if(admin.isSuperAdmin) { %>
    <div class="pull-right">
        <a href="/company/edit" class = "btn btn-info">Edit</a>
    </div>
    <% } %>
    </h3>
    <br>
    <div class="form-group">
        <label for="name">Company Name</label>
        <input type="text" name = "name" id = "name" class = "form-control" value = "<%= company.name %>" disabled readonly>
    </div>
    <div class="form-group">
        <label for="email">Email</label>
        <input type="text" name = "email" id = "email" class = "form-control" value = "<%= company.email %>" disabled readonly> 
    </div>
    <div class="form-group">
        <label for="address">Address</label>
        <textarea name="address" id="address" cols="30" rows="5" class = "form-control" disabled readonly><%= company.address %></textarea>
    </div>
    <div class="form-group">
        <label for="contact">Contact No.</label>
        <input type="text" name = "contact" id = "contact" class = "form-control" value = "<%= company.contact %>" disabled readonly> 
    </div>
<% include layouts/admin/footer %>