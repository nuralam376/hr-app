<% include layouts/frontpage/header %>
    <p class="login-box-msg">Retrieve Your Password</p>

    <% if(typeof errorMsg != 'undefined') { %> 
        <div class = ' alert alert-error'><%= errorMsg %></div>
    <% } %>    
    <form action="/forget-password" method = "POST">
        <input type="hidden" name = "_csrf" value = "<%= csrfToken %>">
       <div class="form-group">
           <label for="email">Email</label>
           <input type="text" name = "email" id = "email" class = "form-control" value = "<%= typeof forms == 'undefined' ? '' : forms.email %>">
       </div>
       <div class="form-group">
            <input type="submit" name = "submit" value = "Submit" class = "btn btn-success">
        </div>
    </form>
<% include layouts/frontpage/footer %>