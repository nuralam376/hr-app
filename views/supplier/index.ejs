<% include ../layouts/admin/header %>
    <h1 class = "text-center">Supplier Home</h1>
    <div class="card">
        <div class="card-body">
            <h2>All Suppliers</h2>     
            <div class="pull-right">
                <a href="/supplier/register" class = "btn btn-primary">Create New Supplier</a>
            </div>   
            <br><br>

            <table class = "table" id = "myTable">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Passport ID</th>
                        <th>Photo</th>
                    </tr>
                </thead>
                <tbody>
                    <% if(suppliers) { %>
                        <% suppliers.forEach((supplier) => { %>
                            <tr>
                                <td><a href = "/supplier/<%= supplier._id %>"><%= supplier._id %></a></td>
                                <td><%= supplier.name %></td>
                                <td><%= supplier.email %></td>
                                <td><%= supplier.passport %></td>
                                <td><img src = "uploads\supplier\<%= supplier.profile_photo %>" height = "50px" width = "50px"></td>
                            </tr>
                        <% }) %>
                    <% } %>
                 </tbody>   
            </table>
        </div>
    </div>
<% include ../layouts/admin/footer %>