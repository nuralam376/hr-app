<% include ../layouts/admin/header %>
    <h1>ID : <%= supplier.seq_id %>
        <div class="pull-right">
            <a href = "/supplier/edit/<%= supplier.seq_id %>" class = "btn btn-info">Edit</a>
            <a href = "#" class = "btn btn-danger delete-supplier" data-id = "<%= supplier._id %>">Delete</a>
        </div>
    </h1>    
   
    <table class = "table table-bordered">
            <tr>
                <th></th>
                <td></td>
            </tr>
            <tr>
                <th>Name</th>
                <td><%= supplier.name %></td>
            </tr>
            <tr>
                <th>Email</th>
                <td><%= supplier.email %></td>
            </tr>
            <tr>
                <th>Birth Date</th>
                <td><%= supplier.birth_date %></td>
            </tr>
            <tr>
                <th>Blood Group</th>
                <td><%= supplier.blood_group %></td>
            </tr>
            <tr>
                <th>National ID</th>
                <td><%= supplier.nid %></td>
            </tr>
            <tr>
                <th>Passport ID</th>
                <td><%= supplier.passport %></td>
            </tr>
            <tr>
                <th>Present Address</th>
                <td><%= supplier.present_address %></td>
            </tr>
            <tr>
                <th>Present Address</th>
                <td><%= supplier.present_address %></td>
            </tr>
            <% if (supplier.supplier) { %>
                <tr>
                    <th>Assigned Supplier</th>
                    <td><%= supplier.supplier.name %></td>
                </tr>
             <% } %>   
            <tr>
                <th>Profile Photo</th>
                <td> <img src="/uploads/user/<%= supplier.profile_photo %>" alt="" style = "height : auto; max-width : 400px;"></td>
            </tr>
            <tr>
                <th>Passport Photo</th>
                <td> <img src="/uploads/user/<%= supplier.passport_photo %>" alt="" style = "height : auto; max-width : 400px;"></td>
            </tr>
        </table>
<% include ../layouts/admin/footer %>