<% include ../layouts/admin/header %>
    <h1><%= supplier.name %>
       <div class="pull-right">
            <a href = "/supplier/edit/<%= supplier._id %>" class = "btn btn-info">Edit</a>
            <a href = "#" class = "btn btn-danger delete-supplier" data-id = "<%= supplier._id %>">Delete</a>
        </div>
    </h1>    
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" name = "name" id = "name" class = "form-control" value = "<%= supplier.name %>" disabled>
    </div>
    <div class="form-group">
        <label for="email">Email</label>
        <input type="text" name = "email" id = "email" class = "form-control" value = "<%= supplier.email %>" disabled> 
    </div>
    <div class="form-group">
        <label for="birth_date">Birth Date</label>
        <input type="text" name = "birth_date" id = "name" class = "form-control" placeholder = "dd/mm/yy" value = "<%= supplier.birth_date %>" disabled>
    </div>
    <div class="form-group">
        <label for="blood">Blood Group</label>
        <input type="text" name = "blood" id = "name" class = "form-control" value = "<%= supplier.blood_group %>" disabled>
    </div>
    <div class="form-group">
        <label for="nid">National ID</label>
        <input type="text" name = "nid" id = "nid" class = "form-control" value = "<%= supplier.nid %>" disabled>
    </div>
    <div class="form-group">
        <label for="passport">Passport ID</label>
        <input type="text" name = "passport" id = "passport" class = "form-control" value = "<%= supplier.passport %>" disabled>
    </div>
    <div class="form-group">
        <label for="present_address">Present Address</label>
        <textarea name="present_address" id="present_address" cols="30" rows="5" class = "form-control" disabled><%= supplier.present_address %></textarea>
    </div>
    <div class="form-group">
        <label for="permanent_address">Permanent Address</label>
        <textarea name="permanent_address" id="permanent_address" cols="30" rows="5" class = "form-control"disabled><%= supplier.permanent_address %></textarea>
    </div>
    <% if(supplier.supplier) { %>
    <div class="form-group">
        <label for="supplier">Assigned Supplier</label>
        <select name="supplier" id="supplier" class = "form-control" disabled>
            <option value=""><%= supplier.supplier.name %></option>
        </select>
    </div>
    <% } %>
    <div class="form-group">
        <label for="profile_photo">Profile Photo</label>
        <img src = "/uploads/supplier/<%= supplier.profile_photo %>" style = "height:auto;max-width:500px;" id = "photo">
    </div>
    <div class="form-group">
        <label for="passport_photo">Passport Photo</label>
        <img src = "/uploads/supplier/<%= supplier.passport_photo %>" style = "height:auto;max-width:500px;" id = "photo1">
    </div>
<% include ../layouts/admin/footer %>